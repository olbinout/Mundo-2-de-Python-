numero = int(input('Digite um número: '))
print('''Qual será a base de conversão?
[1] Para BINÁRIO
[2] Para OCTAL
[3] Para HEXADECIMAL''')
base_de_conversao = int(input("Escolha alguma base de conversão: "))

if base_de_conversao == 1:
    print(f'{numero} foi o número escolhido para ser convertido em BINÁRIO, a conversão: {bin(numero)[2:]}.')
elif base_de_conversao == 2:
    print(f'{numero} foi o número escolhido para ser convertido em OCTAL, a conversão: {oct(numero)[2:]}')
elif base_de_conversao == 3: 
    print(f'{numero} foi o número escolhido para ser convertido em HEXADECIMAL, a conversão: {hex(numero)[2:]}')
else:
    print('Reinicie o programa e escolha 1, 2 ou 3. Obrigado!')