maior_peso = 0
menor_peso = 0
for pessoa in range(1,4):
    peso = float(input(f'Peso da {pessoa}Âª pessoa: '))
    if pessoa == 1:
        maior_peso = peso
        menor_peso = peso
    else:
        if peso > maior_peso:
            maior_peso = peso

        if peso < menor_peso:
            menor_peso = peso

print(f'O maior peso dito foi de {maior_peso:.1f}Kg.')
print(f'O menor peso dito foi de {menor_peso:.1f}Kg.')
